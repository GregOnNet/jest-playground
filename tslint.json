{
  "extends": ["tslint:recommended", "tslint-config-prettier"],
  "rulesDirectory": ["codelyzer"],
  "rules": {
    "quotemark": [true, "single"],
    "arrow-parens": false,
    "max-line-length": [true, 80],
    "trailing-comma": [
      true,
      {
        "multiline": "never",
        "singleline": "never"
      }
    ]
  }
}
